{
  "bin": {
    "lint-flow": "bin/lint-flow.js"
  },
  "name": "lint-flow",
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  },
  "version": "0.0.1",
  "description": "Run linters against git files and don't let ðŸ’© slip into your code base!",
  "main": "index.js",
  "scripts": {
    "lint:changed": "npm run lint -- --changed",
    "lint:staged": "npm run lint -- --staged",
    "lint:diff": "npm run lint -- --diff-with master",
    "lint": "node bin/lint-flow --debug",
    "precommit": "npm run lint:staged",
    "pretest": "npm run lint",
    "test": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gucong3000/lint-flow.git"
  },
  "keywords": [
    "lint"
  ],
  "author": "gucong3000",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gucong3000/lint-flow/issues"
  },
  "homepage": "https://github.com/gucong3000/lint-flow#readme",
  "dependencies": {
    "chalk": "^2.4.1",
    "diff": "^3.5.0",
    "file-type": "^8.0.0",
    "fs-extra": "^6.0.1",
    "get-stream": "^3.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-html-postcss": "^7.1.3",
    "gulp-htmlhint": "^2.1.1",
    "gulp-if": "^2.0.2",
    "gulp-reporter": "^2.8.3",
    "gulp-standard": "^11.0.0",
    "gulp-tslint": "^8.1.3",
    "gulp-util": "^3.0.8",
    "gulp-xo": "^0.17.1",
    "is-ci": "^1.1.0",
    "lazypipe": "^1.0.1",
    "nodegit": "^0.22.2",
    "postcss": "^6.0.23",
    "proxyquire": "^2.0.1",
    "through2": "^2.0.3",
    "vinyl": "^2.2.0",
    "vinyl-fs": "^3.0.3",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "eclint": "^2.7.0",
    "eslint": "^5.0.0",
    "eslint-config-standard": "^14.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "htmlhint": "^0.9.13",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  }
}
