{
  "bin": {
    "lint-flow": "bin/lint-flow.js"
  },
  "name": "lint-flow",
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  },
  "version": "0.0.2",
  "description": "Run linters against git files and don't let ðŸ’© slip into your code base!",
  "main": "index.js",
  "scripts": {
    "lint:unstaged": "npm run lint -- --unstaged",
    "lint:staged": "npm run lint -- --staged",
    "lint:diff": "npm run lint -- --diff=refs/remotes/origin/master...",
    "lint": "node bin/lint-flow !test/**/fixtures/**/* --debug",
    "precommit": "git rev-parse -q --verify MERGE_HEAD || npm run lint:staged",
    "pretest": "npm run lint",
    "test": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gucong3000/lint-flow.git"
  },
  "keywords": [
    "lint"
  ],
  "author": "gucong3000",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gucong3000/lint-flow/issues"
  },
  "homepage": "https://github.com/gucong3000/lint-flow#readme",
  "optionalDependencies": {
    "nodegit": "^0.22.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "ci-info": "^1.1.3",
    "diff": "^3.5.0",
    "fancy-log": "^1.3.2",
    "file-type": "^8.0.0",
    "fs-extra": "^6.0.1",
    "gulp-eslint": "^4.0.2",
    "gulp-html-postcss": "^7.1.2",
    "gulp-htmlhint": "^2.1.1",
    "gulp-if": "^2.0.2",
    "gulp-reporter": "^2.8.3",
    "gulp-standard": "^11.0.0",
    "gulp-tslint": "^8.1.3",
    "gulp-xo": "^0.17.1",
    "is-binary-path": "^2.0.0",
    "micromatch": "^3.1.10",
    "postcss": "^6.0.22",
    "proxyquire": "^2.0.1",
    "through2": "^2.0.3",
    "vinyl": "^2.1.0",
    "vinyl-fs": "^3.0.3",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eclint": "^2.7.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0"
  }
}
